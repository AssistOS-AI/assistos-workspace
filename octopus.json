{
    "workDir": ".",
    "dependencies": [
        {
            "name": "opendsu-sdk",
            "src": "http://github.com/opendsu/opendsu-sdk.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": ".",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "cd opendsu-sdk && npm install"
                },
                {
                    "type": "copy",
                    "src": "./opendsu-sdk/psknode/bundles/iframeBoot.js",
                    "target": "./apihub-root/wallet/scripts/bundles/iframeBoot.js",
                    "options": {
                        "overwrite": true
                    }
                }
            ]
        },
      {
        "name": "WebSkel",
        "src": "https://github.com/OutfinityResearch/WebSkel.git",
        "actions": [
          {
            "type": "smartClone",
            "target": "./apihub-root/",
            "collectLog": false
          }
        ]
      },
      {
        "name": "configs",
        "src": "https://github.com/OutfinityResearch/outfinity-configs.git",
        "actions": [
          {
            "type": "smartClone",
            "target": ".",
            "collectLog": false
          }
        ]
      },
      {
        "name": "summarizer",
        "src": "https://github.com/OutfinityResearch/outfinity-summarization.git",
        "actions": [
          {
            "type": "smartClone",
            "target": ".",
            "collectLog": false
          }
        ]
      },
      {
        "name": "creator-process",
        "src": "https://github.com/OutfinityResearch/outfinity-creator.git",
        "actions": [
          {
            "type": "smartClone",
            "target": ".",
            "collectLog": false
          },{
            "type": "execute",
            "cmd": "cd creator-process && npm install"
          }
        ]
      }
    ],
    "postinstall": [
      {
        "name": "copy-bundles",
        "actions": [
          {
            "type": "copy",
            "src": "./opendsu-sdk/psknode/bundles/webshims.js",
            "target": "./apihub-root/bundles/webshims.js",
            "options": {
              "overwrite": true
            }
          },
          {
            "type": "copy",
            "src": "./opendsu-sdk/psknode/bundles/loaderBoot.js",
            "target": "./apihub-root/bundles/loaderBoot.js",
            "options": {
              "overwrite": true
            }
          }
        ]
      }
    ],
    "build": [
      {
        "name": "build-all",
        "actions": [
          {
            "type": "copy",
            "src": "./opendsu-sdk/builds/output/versionLessBoot.js",
            "target": "./apihub-root/wallet/bundles/versionLessBoot.js",
            "options": {
              "overwrite": true
            }
          }
        ]
      }
    ]
  }
