{
    "workDir": ".",
    "dependencies": [
        {
            "name": "lint-report",
            "src": "https://github.com/Axiologic/lint-check.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": "./__tmp_lint_check__",
                    "collectLog": false
                },
                {
                    "type": "copy",
                    "src": "./__tmp_lint_check__/lint-report/reports/index.html",
                    "target": "./eslint-report.html",
                    "options": {
                        "overwrite": true
                    }
                },
                {
                    "type": "remove",
                    "target": "./__tmp_lint_check__"
                }
            ]
        },
        {
            "name": "Gatekeeper",
            "src": "https://github.com/OpenDSU/Gatekeeper.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": "./apihub-components/",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "cd ./apihub-components/Gatekeeper && npm install"
                },
                {
                    "type": "copy",
                    "src": "./apihub-components/Gatekeeper/authenticator/totp/qrcode",
                    "target": "./apihub-root/wallet/lib/qrcode",
                    "options": {
                        "overwrite": true
                    }
                }
            ]
        },
        {
            "name": "EmailPlugin",
            "src": "https://github.com/AssistOS-AI/MailJetPlugin",
            "actions": [
                {
                    "type": "smartClone",
                    "target": "./apihub-components/Gatekeeper",
                    "collectLog": false
                }
            ]
        },
        {
            "name": "soplang",
            "src": "https://github.com/AssistOS-AI/soplang.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": "./apihub-components/",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "cd ./apihub-components/soplang && npm install"
                }
            ]
        },
        {
            "name": "opendsu-sdk",
            "src": "http://github.com/opendsu/opendsu-sdk.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": ".",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "cd opendsu-sdk && npm install"
                },
                {
                    "type": "copy",
                    "src": "./opendsu-sdk/builds/output/versionLessBoot.js",
                    "target": "./apihub-root/wallet/scripts/bundles/versionLessBoot.js",
                    "options": {
                        "overwrite": true
                    }
                }
            ]
        },
        {
            "name": "WebSkel",
            "src": "https://github.com/OutfinityResearch/WebSkel.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": "./apihub-root/",
                    "collectLog": false
                }
            ]
        },
        {
            "name": "assistos-sdk",
            "src": "https://github.com/AssistOS-AI/assistos-sdk.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": ".",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "cd assistos-sdk && npm install"
                }
            ]
        },
        {
            "name": "marked",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "npm install marked --no-save"
                },
                {
                    "type": "copy",
                    "src": "node_modules/marked/lib/marked.umd.js",
                    "target": "apihub-root/wallet/lib/marked.umd.js"
                },
                {
                    "type": "execute",
                    "cmd": "npm uninstall marked"
                }
            ]
        }
    ],
    "build": [
        {
            "name": "build-all",
            "actions": [
                {
                    "type": "copy",
                    "src": "./assistos-sdk/dist/assistos-sdk.umd.js",
                    "target": "./apihub-root/wallet/bundles/assistos-sdk.umd.js",
                    "options": {
                        "overwrite": true
                    }
                }
            ]
        }
    ]
}